# ========================================
# CONFIGURAÇÕES DO SISTEMA DE QUIOSQUE
# ========================================

# Configurações do Banco de Dados
DATABASE_URL=postgresql://quiosque_user:quiosque_password@localhost:5432/quiosque_db

# Configurações de Segurança
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Configurações de CORS
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://localhost:3000,http://127.0.0.1:3000

# Configurações de Desenvolvimento
DEBUG=true
ALLOW_ALL_INTERNAL_NETWORKS=true

# Configurações do Servidor Backend
BACKEND_HOST=127.0.0.1
BACKEND_PORT=8000

# Configurações do Frontend
FRONTEND_PORT=5173

# Configurações do Banco de Dados Docker
POSTGRES_DB=quiosque_db
POSTGRES_USER=quiosque_user
POSTGRES_PASSWORD=quiosque_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Configurações Redis (opcional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Configurações de Cliente (opcional)
CLIENT_ID=your-client-id
CLIENT_SECRET=your-client-secret
CLIENT_ROLE=client
