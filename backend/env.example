# Configurações do Banco de Dados
DATABASE_URL=postgresql://username:password@localhost:5432/pedidos_quiosque

# Configurações de Segurança
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Configurações de CORS (IPs permitidos)
# Formato: origem1,origem2,origem3
# Domínios permitidos:
# - localhost (desenvolvimento)
# - 127.0.0.1 (desenvolvimento)
# - 192.168.68.102 (rede local)
# - adm.quiosqueapp.com.br (produção)
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://localhost:3000,http://127.0.0.1:3000,http://localhost:8080,http://127.0.0.1:8080,http://192.168.68.102:5173,http://192.168.68.102:3000,http://192.168.68.102:8080,https://adm.quiosqueapp.com.br,http://adm.quiosqueapp.com.br

# Configuração para liberar toda rede interna (DESENVOLVIMENTO APENAS)
# ATENÇÃO: Use apenas em desenvolvimento, nunca em produção!
# Para liberar toda a rede interna, configure:
ALLOW_ALL_INTERNAL_NETWORKS=true
# DEBUG também deve estar true para funcionar
DEBUG=true

# Configurações de Cliente (opcional)
CLIENT_ID=your-client-id
CLIENT_SECRET=your-client-secret
CLIENT_ROLE=client

# Configurações do Servidor
HOST=127.0.0.1
PORT=8000
